<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlaceTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlaceTitle.MyRed">
        <item name="android:textColor">#3949AB</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="CategoryNameTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:background">#DDD9D9</item>
        <item name="android:textColor">#7E7A7A</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CategoryChildImage">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">#646060</item>
    </style>

    <style name="CategoryChildLinearLayout">
        <item name="android:background">#fff</item>
    </style>

    <style name="CategoryChildText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="categoryChildDetailTextViw">
        <item name="android:gravity">center</item>
    </style>

</resources>
